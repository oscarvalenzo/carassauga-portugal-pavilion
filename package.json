{
  "name": "carassauga-connect",
  "version": "1.0.0",
  "description": "Portugal Pavilion Digital Experience Platform",
  "private": true,
  "workspaces": [
    "client",
    "server",
    "shared"
  ],
  "scripts": {
    "dev:client": "cd client && npm run dev",
    "dev:server": "cd server && npm run dev",
    "dev": "concurrently \"npm run dev:client\" \"npm run dev:server\"",
    "build:client": "cd client && npm run build",
    "build:server": "cd server && npm run build",
    "build": "npm run build:client && npm run build:server",
    "test": "npm run test --workspaces",
    "deploy": "npm run build && npm run deploy:client && npm run deploy:server",
    "deploy:client": "cd client && vercel --prod",
    "deploy:client:firebase": "cd client && npm run build && cd .. && firebase deploy --only hosting",
    "deploy:server": "cd server && railway up",
    "firebase:init": "firebase init hosting",
    "firebase:deploy": "firebase deploy --only hosting",
    "firebase:serve": "firebase serve --only hosting"
  },
  "keywords": [
    "carassauga",
    "cultural-experience",
    "gamification",
    "pwa"
  ],
  "author": "Carassauga Portugal Pavilion Team",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}

