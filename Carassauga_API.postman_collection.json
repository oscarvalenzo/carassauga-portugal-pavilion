{
  "info": {
    "name": "Carassauga Connect API",
    "description": "Complete API collection for the Carassauga Festival app",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:4000",
      "type": "string"
    },
    {
      "key": "token",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Register User",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"{{$randomEmail}}\",\n  \"display_name\": \"{{$randomFullName}}\",\n  \"family_group_code\": \"SANTOS2025\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/auth/register",
              "host": ["{{base_url}}"],
              "path": ["api", "auth", "register"]
            }
          }
        },
        {
          "name": "Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "const response = pm.response.json();",
                  "if (response.token) {",
                  "    pm.environment.set('token', response.token);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"maria@example.com\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/auth/login",
              "host": ["{{base_url}}"],
              "path": ["api", "auth", "login"]
            }
          }
        },
        {
          "name": "Get My Profile",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/auth/me",
              "host": ["{{base_url}}"],
              "path": ["api", "auth", "me"]
            }
          }
        }
      ]
    },
    {
      "name": "Activities",
      "item": [
        {
          "name": "Get All Activities",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/api/activities",
              "host": ["{{base_url}}"],
              "path": ["api", "activities"]
            }
          }
        },
        {
          "name": "Get Activity by ID",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/api/activities/1",
              "host": ["{{base_url}}"],
              "path": ["api", "activities", "1"]
            }
          }
        }
      ]
    },
    {
      "name": "Badges",
      "item": [
        {
          "name": "Get All Badges",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/api/badges",
              "host": ["{{base_url}}"],
              "path": ["api", "badges"]
            }
          }
        },
        {
          "name": "Get Badge by ID",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/api/badges/1",
              "host": ["{{base_url}}"],
              "path": ["api", "badges", "1"]
            }
          }
        }
      ]
    },
    {
      "name": "Events",
      "item": [
        {
          "name": "Get All Events",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/api/events",
              "host": ["{{base_url}}"],
              "path": ["api", "events"]
            }
          }
        },
        {
          "name": "Get Event by ID",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/api/events/1",
              "host": ["{{base_url}}"],
              "path": ["api", "events", "1"]
            }
          }
        }
      ]
    },
    {
      "name": "Quests",
      "item": [
        {
          "name": "Get All Quests",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/quests",
              "host": ["{{base_url}}"],
              "path": ["api", "quests"]
            }
          }
        },
        {
          "name": "Complete Activity (Scan QR)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"qr_code\": \"FOODIE_BACALHAU_2025\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/quests/complete-activity",
              "host": ["{{base_url}}"],
              "path": ["api", "quests", "complete-activity"]
            }
          }
        },
        {
          "name": "Get Quest Progress",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/quests/progress",
              "host": ["{{base_url}}"],
              "path": ["api", "quests", "progress"]
            }
          }
        }
      ]
    },
    {
      "name": "Leaderboard",
      "item": [
        {
          "name": "Global Leaderboard",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/api/leaderboard/global",
              "host": ["{{base_url}}"],
              "path": ["api", "leaderboard", "global"]
            }
          }
        },
        {
          "name": "Family Leaderboard",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/api/leaderboard/family?family_group_id=1",
              "host": ["{{base_url}}"],
              "path": ["api", "leaderboard", "family"],
              "query": [
                {
                  "key": "family_group_id",
                  "value": "1"
                }
              ]
            }
          }
        }
      ]
    },
    {
      "name": "Users",
      "item": [
        {
          "name": "Get User Stats",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/users/1/stats",
              "host": ["{{base_url}}"],
              "path": ["api", "users", "1", "stats"]
            }
          }
        }
      ]
    },
    {
      "name": "Virtual Queue",
      "item": [
        {
          "name": "Join Queue",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"station_name\": \"Bacalhau Station\",\n  \"phone_number\": \"+1234567890\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/queue/join",
              "host": ["{{base_url}}"],
              "path": ["api", "queue", "join"]
            }
          }
        },
        {
          "name": "Leave Queue",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/queue/leave",
              "host": ["{{base_url}}"],
              "path": ["api", "queue", "leave"]
            }
          }
        },
        {
          "name": "Get Queue Position",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/queue/position",
              "host": ["{{base_url}}"],
              "path": ["api", "queue", "position"]
            }
          }
        }
      ]
    },
    {
      "name": "Health Check",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{base_url}}/health",
          "host": ["{{base_url}}"],
          "path": ["health"]
        }
      }
    }
  ]
}

